<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.deepknow.paper.infrastructure.repository.mapper.PaperProjectMapper">

    <resultMap id="BaseResultMap" type="com.deepknow.paper.infrastructure.repository.po.PaperProjectPO">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="title" property="title" />
        <result column="topic_overview" property="topicOverview" />
        <result column="status" property="status" />
        <result column="is_deleted" property="isDeleted" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, title, topic_overview, status, is_deleted, create_time, update_time
    </sql>

    <insert id="insert" parameterType="com.deepknow.paper.infrastructure.repository.po.PaperProjectPO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO paper_project (user_id, title, topic_overview, status, is_deleted, create_time, update_time)
        VALUES (#{userId}, #{title}, #{topicOverview}, #{status}, 0, #{createTime}, #{updateTime})
    </insert>

    <update id="updateById" parameterType="com.deepknow.paper.infrastructure.repository.po.PaperProjectPO">
        UPDATE paper_project
        <set>
            <if test="title != null">title = #{title},</if>
            <if test="topicOverview != null">topic_overview = #{topicOverview},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateTime != null">update_time = #{updateTime}</if>
        </set>
        WHERE id = #{id} AND is_deleted = 0
    </update>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM paper_project
        WHERE id = #{id} AND is_deleted = 0
    </select>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM paper_project
        WHERE user_id = #{userId} AND is_deleted = 0
        ORDER BY create_time DESC
    </select>

</mapper>
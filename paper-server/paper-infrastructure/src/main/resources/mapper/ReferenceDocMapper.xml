<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.deepknow.paper.infrastructure.repository.mapper.ReferenceDocMapper">

    <resultMap id="BaseResultMap" type="com.deepknow.paper.infrastructure.repository.po.ReferenceDocPO">
        <id column="id" property="id" />
        <result column="project_id" property="projectId" />
        <result column="file_name" property="fileName" />
        <result column="file_url" property="fileUrl" />
        <result column="text_url" property="textUrl" />
        <result column="usage_type" property="usageType" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <insert id="insert" parameterType="com.deepknow.paper.infrastructure.repository.po.ReferenceDocPO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO paper_reference_doc (project_id, file_name, file_url, text_url, usage_type, create_time)
        VALUES (#{projectId}, #{fileName}, #{fileUrl}, #{textUrl}, #{usageType}, #{createTime})
    </insert>

    <select id="selectByProjectId" resultMap="BaseResultMap">
        SELECT id, project_id, file_name, file_url, text_url, usage_type, create_time
        FROM paper_reference_doc
        WHERE project_id = #{projectId}
        ORDER BY create_time ASC
    </select>

</mapper>
